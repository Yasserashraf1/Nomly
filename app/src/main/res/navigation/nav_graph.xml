<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.nomly.ui.auth.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.nomly.ui.auth.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.nomly.ui.auth.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <activity
        android:id="@+id/recipeActivity"
        android:name="com.example.nomly.ui.main.RecipeActivity"
        android:label="RecipeActivity"
        tools:layout="@layout/activity_recipe">
        <deepLink app:uri="recipeapp://main" />
    </activity>

    <navigation
        android:id="@+id/main_nav"
        app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.nomly.ui.main.HomeFragment"
            android:label="HomeFragment"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_recipeDetailFragment"
                app:destination="@id/recipeDetailFragment" />
        </fragment>

        <fragment
            android:id="@+id/searchFragment"
            android:name="com.example.nomly.ui.main.SearchFragment"
            android:label="SearchFragment"
            tools:layout="@layout/fragment_search">
            <action
                android:id="@+id/action_searchFragment_to_recipeDetailFragment"
                app:destination="@id/recipeDetailFragment" />
        </fragment>

        <fragment
            android:id="@+id/favoriteFragment"
            android:name="com.example.nomly.ui.main.FavoriteFragment"
            android:label="FavoriteFragment"
            tools:layout="@layout/fragment_favorite">
            <action
                android:id="@+id/action_favoriteFragment_to_recipeDetailFragment"
                app:destination="@id/recipeDetailFragment" />
        </fragment>

        <fragment
            android:id="@+id/recipeDetailFragment"
            android:name="com.example.nomly.ui.main.RecipeDetailFragment"
            android:label="RecipeDetailFragment"
            tools:layout="@layout/fragment_recipe_detail">

            <argument
                android:name="recipeId"
                app:argType="string" />
        </fragment>

        <fragment
            android:id="@+id/aboutFragment"
            android:name="com.example.nomly.ui.main.AboutFragment"
            android:label="AboutFragment"
            tools:layout="@layout/fragment_about" />
    </navigation>
</navigation>